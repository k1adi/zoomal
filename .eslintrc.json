{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 2],
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    },
    "ignorePatterns":[
        "dist/*"
    ]
}
